- attributes = model.attributes.reject do |key|
  - %w(id created_at updated_at).include? key
= simple_form_for model, html: { class: 'form-horizontal' } do |f|
  - attributes.each do |attribute, value|
    - if attribute.include? "_id"
      = f.association attribute.chomp("_id").to_sym
    - else
      = f.input attribute
  .form-actions
    = f.button :submit, class: 'btn-primary'
    = link_to "Cancel", :back, class: 'btn'
