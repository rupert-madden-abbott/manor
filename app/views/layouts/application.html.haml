!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Manor"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "Manor", root_path, class: 'brand'
          .container.nav-collapse
            - if user_signed_in?
              %ul.nav
                %li= link_to "Users", users_path if current_user.can_read? User
                %li= link_to "Duties", duties_path if current_user.can_read? Duty
                %li= link_to "Rota", rota_path if current_user.can_read? Rotum
              %ul.nav.pull-right
                %li.navbar-text= "Welcome #{current_user.name}"
                - if current_user.imposter?
                  %li= link_to "Stop Impersonating", user_impersonator_path(current_user, current_user.impersonated_by), method: :delete
                - else
                  %li= link_to "Sign Out", destroy_user_session_path
              - else
                %ul.nav.pull-right
                  %li= link_to "Sign In", new_user_session_path

    .container
      .content
        .row
          = bootstrap_flash
          .span9
            = yield
          - if content_for?(:infobar) || content_for?(:actionbar)
            .span3
              %ul.sidebar-nav.nav.nav-list.well
                - if content_for?(:actionbar)
                  %li.nav-header Actions
                  = yield :actionbar
                - if content_for?(:infobar)
                  %li.nav-header Info
                  = yield :infobar

    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
