!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Manor"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"

  %body
    = render "shared/navbar", users: @impersonatables

    .container
      .content
        .row
          = bootstrap_flash
          .span9
            = yield
          - if content_for?(:infobar) || content_for?(:actionbar)
            .span3
              %ul.sidebar-nav.nav.nav-list.well
                - if content_for?(:actionbar)
                  %li.nav-header Actions
                  = yield :actionbar
                - if content_for?(:infobar)
                  %li.nav-header Info
                  = yield :infobar

    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
