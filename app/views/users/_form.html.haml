= simple_form_for user, validate: true, html: { class: 'form-horizontal' } do |f|
  = f.input :name
  = f.input :username
  = f.association :roles
  = f.input :mobile
  = f.input :extension
  = f.input :email
  = f.input :residence
  = f.input :responsibilites
  .form-actions
    = f.button :submit, class: 'btn-primary'
    = link_to "Cancel", :back, class: 'btn'
